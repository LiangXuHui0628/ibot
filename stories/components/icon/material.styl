@font-face
  font-family 'Material Icons'
  font-style normal
  font-weight 400
  // this path is relative to import source js file, not this style file
  src local('Material Icons'), local('MaterialIcons-Regular'),
    url(./fonts/material.woff2) format('woff2'),
    url(./fonts/material.woff) format('woff'),
    url(./fonts/material.ttf) format('truetype')

.md
  display inline-block
  font normal normal normal 1em/1 'Material Icons'
  font-size inherit
  letter-spacing normal
  text-transform none
  word-wrap normal
  white-space nowrap
  direction ltr
  // Support for all WebKit browsers:
  -webkit-font-smoothing antialiased
  // Support for Safari and Chrome:
  text-rendering optimizeLegibility
  // Support for Firefox:
  -moz-osx-font-smoothing grayscale
  // Support for IE:
  font-feature-settings 'liga'

